<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/darker_gray"
        android:textColor="@color/white"
        android:maxLength="12"
        android:textSize="48sp"
        android:gravity="end|bottom"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_digit_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_divide"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onOperator"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_digit_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_product"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onOperator"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_digit_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_minus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onOperator"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_digit_0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onDigit"/>

            <Button
                android:id="@+id/btn_digit_clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="CL"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="clearBtn"/>

            <Button
                android:id="@+id/btn_digit_decimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="decimalPoint"/>

            <Button
                android:id="@+id/btn_digit_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onOperator"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_digit_equals"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="="
                android:textSize="40sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:onClick="onEqual"/>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>